<h3>All Registered Users</h3>
<ul>
  <% @users.each do |user| %>
    <li><%= link_to "#{user.email}", user_path(user) %>, as <em><%= user.display_name %></em></li>
    <ul class="menu simple">
      <li><%= link_to "Edit Account", user_admin_edit_path(user) %></li>
      <li><%= link_to "Delete Account", registration_path(user),
        data: { confirm: "Are you sure you want to delete #{user.display_name}?" }, method: :delete %></li>
    </ul>
  <% end %>
</ul>
