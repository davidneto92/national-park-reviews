<%= form_for([@park, @review]) do |f| %>

  <% if @review.errors.any? %>
    <div id="new-review-error">
      <h2><%= pluralize(@review.errors.count, "error") %> prevented your review from being saved:</h2>
      <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :title, "Review Title" %><br>
  <%= f.text_field :title %><br><br>

  <%= f.label :body, "Your Review" %><br>
  <%= f.text_area :body %><br><br>

  <%= f.label :visit_date, "Date of Visit" %><br>
  <%= f.date_select :visit_date, start_year: 1900, end_year: Time.now.year %><br><br>

  <%= f.submit "Submit Review" %>

<% end %>
